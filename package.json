{
  "name": "sae-project",
  "version": "1.0.3",
  "description": "SAE - Sistema de Administración Educativa | Gestión Educativa Libre para instituciones de Guatemala",
  "main": "electron/main.js",
  "type": "commonjs",
  "scripts": {
    "start": "node scripts/start-dynamic.js backend/server.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:old": "npm run dev:web",
    "dev:web": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:nodemon": "npx nodemon backend/server.js",
    "dev:backend": "node scripts/start-dynamic.js backend/server.js",
    "dev:frontend": "cd frontend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "postinstall": "npx prisma generate",
    "pretest": "node setup-test-db.js",
    "test": "cross-env NODE_ENV=test jest --coverage --verbose",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:integration": "cross-env NODE_ENV=test jest backend/__tests__/asistencias-integration.test.js",
    "seed": "node backend/prisma/seed.js",
    "prisma:studio": "npx prisma studio",
    "db:reset": "node backend/scripts/reset-db.js",
    "prisma:push": "npx prisma db push",
    "prisma:reset": "npx prisma migrate reset --force",
    "utils": "node scripts/utils.js",
    "admin": "node scripts/crear-admin.js",
    "reset-admin": "node scripts/crear-admin.js",
    "update": "node scripts/update-system.js",
    "rollback": "node scripts/rollback-version.js",
    "update:safe": "npm update express-validator && cd frontend && npm update @eslint/js @vitejs/plugin-react autoprefixer eslint vite",
    "lint": "eslint backend --ext .js",
    "lint:fix": "eslint backend --ext .js --fix",
    "validate:emojis": "node scripts/validate-no-emojis.js",
    "validate:all": "npm run lint && npm run validate:emojis",
    "electron": "wscript.exe start-sae.vbs",
    "electron:silent": "node scripts/start-electron-dev.js",
    "electron:debug": "node scripts/start-electron-dev.js",
    "electron:dev": "electron electron/main.js",
    "dist": "npm run build:frontend && electron-builder",
    "dist:win": "npm run build:frontend && electron-builder --win",
    "dist:debug": "npm run build:frontend && electron-builder --dir",
    "dist:linux": "npm run build:frontend && electron-builder --linux",
    "dist:mac": "npm run build:frontend && electron-builder --mac"
  },
  "keywords": [
    "asistencias",
    "qr",
    "colegio",
    "control"
  ],
  "author": "Kevin Pérez",
  "license": "GPL-3.0",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "archiver": "^7.0.1",
    "astral-regex": "^2.0.0",
    "axios": "^1.13.1",
    "bcrypt": "^5.1.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.3",
    "electron-updater": "^6.7.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.0",
    "extract-zip": "^2.0.1",
    "fs-extra": "^11.3.3",
    "glob": "^13.0.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "jszip": "^3.10.1",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "pdfkit": "^0.15.0",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.2",
    "qrcode": "^1.5.3",
    "rimraf": "^6.1.2",
    "sharp": "^0.32.6",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "streamifier": "^0.1.1",
    "uuid": "^13.0.0"
  },
  "build": {
    "appId": "com.sae.administracion-educativa",
    "productName": "SAE - Sistema de Administración Educativa",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "backend/**/*",
      ".env",
      "package.json",
      "node_modules/**/*",
      "node_modules/.prisma/**/*",
      "node_modules/@prisma/client/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "frontend/public/logo.ico",
      "signAndEditExecutable": false,
      "executableName": "SAE"
    },
    "extraFiles": [
      {
        "from": "frontend/public/logo.ico",
        "to": "logo.ico"
      }
    ],
    "linux": {
      "target": "AppImage",
      "category": "Education"
    },
    "mac": {
      "target": "dmg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SAE",
      "deleteAppDataOnUninstall": false,
      "license": "LICENSE",
      "installerIcon": "frontend/public/logo.ico",
      "uninstallerIcon": "frontend/public/logo.ico",
      "installerHeaderIcon": "frontend/public/logo.ico",
      "include": "build/installer.nsh",
      "displayLanguageSelector": false,
      "artifactName": "SAE-${version}-Setup.exe"
    },
    "asar": true,
    "asarUnpack": [
      "backend/**/*",
      "prisma/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "prisma/schema.prisma",
        "to": "prisma/schema.prisma"
      },
      {
        "from": "prisma/migrations",
        "to": "prisma/migrations"
      },
      {
        "from": "prisma/dev.db",
        "to": "prisma/dev.db"
      },
      {
        "from": "node_modules/.prisma",
        "to": "node_modules/.prisma"
      },
      {
        "from": "node_modules/@prisma/client",
        "to": "node_modules/@prisma/client"
      },
      {
        "from": ".env",
        "to": ".env"
      },
      {
        "from": "build/node.exe",
        "to": "node.exe"
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "Hikki777",
      "repo": "SAE-Project",
      "releaseType": "release"
    }
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.5.0",
    "jest": "^30.2.0",
    "jimp": "^1.6.0",
    "jsqr": "^1.4.0",
    "prisma": "^5.22.0",
    "supertest": "^7.1.4",
    "wait-on": "^7.2.0"
  }
}
